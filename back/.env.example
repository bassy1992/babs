# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=False
ALLOWED_HOSTS=your-backend-domain.railway.app,your-backend-domain.onrender.com

# Database (Railway/Render will provide this)
DATABASE_ENGINE=django.db.backends.postgresql
DATABASE_NAME=railway
DATABASE_USER=postgres
DATABASE_PASSWORD=your-db-password
DATABASE_HOST=your-db-host
DATABASE_PORT=5432

# CORS (Add your Vercel frontend URL)
CORS_ALLOWED_ORIGINS=https://your-frontend.vercel.app,http://localhost:8080

# Paystack
PAYSTACK_SECRET_KEY=your-paystack-secret-key
PAYSTACK_PUBLIC_KEY=your-paystack-public-key
